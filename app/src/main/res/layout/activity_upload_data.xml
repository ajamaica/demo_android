<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:namespace="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_upload_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#806e6e6e">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="5dp" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">
            <ProgressBar
                android:id="@+id/more_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:indeterminateTint="@android:color/white"

                />
            <com.brounie.sayer.Utils.TypefacedTextView
                namespace:typeface="Raleway-Light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/more_progress"
                android:padding="5dp"
                android:text="@string/loading"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
